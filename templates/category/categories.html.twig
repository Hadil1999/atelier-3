{% extends 'base.html.twig' %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
<div class="row">
<div class="col-md-6">
        <a class="btn btn-success" href="{{path('category_add')}}">Add new category</a>

</div>
</div>
<br>
<br>
<div class="row">
<h1>List of categories</h1>
    <table class="table table-striped" >
<tr>
  <th>Id</th>
  <th>label</th>
  <th>products</th>
  <th>Actions</th>
  

</tr>
{% for c in categories %}
<tr>
    <td>{{ c.id }}</td>
    <td>{{ c.label|upper }}</td>
    <td>
    <ul>
    {% for p in c.products %}
    <li>{{ p.label }}</li>
    {% endfor %}
    </ul></td>
    <td><a href="{{ path('category_remove', {'id': c.id}) }}"> <input type="button"class="btn btn-danger" value="remove" /></a><td>

</tr>
{% endfor %}
</table>
{% endblock %}