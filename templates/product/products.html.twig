{% extends 'base.html.twig' %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
<div class="row">
<div class="col-md-6">
        <a class="btn btn-success" href="{{path('product_add')}}">Add new product</a>

</div>
</div>
<br>
<br>
<div class="row">

<h1>List of products</h1>
    <table class="table table-striped" >
<tr>
  <th>id</th>
  <th>label</th>
  <th>price</th>
  <th>quantity</th>
  <th>category</th>
  <th>Actions</th>

</tr>

{% for p in products %}
<tr>
    <td>{{ p.id }}</td>
    <td>{{ p.label|upper }}</td>
    <td>{{ p.price }}</td>
    <td>{{ p.quantity}}</td>
    <td>{{ p.idCategory.label }}</td>
    <td><a href="{{ path('product_remove', {'id': p.id}) }}"><input type="button"class="btn btn-danger" value="remove" /></a><td>

</tr>
{% endfor %}
</table>
<tr>number of products :{{products|length}}</tr>

{% endblock %}